<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/filebackground">

        <TextView
            android:id="@+id/tvPrivateUserName"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Anshul"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPrivateUploadTime"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 minutes ago"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvPrivateFileName"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="File Name goes here."/>

        <ImageButton
            android:id="@+id/privateibDownload"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="right|bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_cloud_download_24"
            android:backgroundTint="@color/white"
            android:layout_marginRight="15dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>